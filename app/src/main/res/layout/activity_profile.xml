<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".ProfileActivity">


    <TextView
        android:layout_margin="10dp"
        android:background="@drawable/button_radius"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
       android:text="PLAYER PROFILE"
        android:textColor="#fff"
        android:textSize="14sp"
        android:padding="8dp"
        android:typeface="serif"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/profilePIc"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/mashrafe"
            />
        <TextView
            android:id="@+id/name"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MASHRAFE MORTOZA(C)"
            android:typeface="monospace"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#090606"
            android:textAlignment="center"
            />


        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_marginLeft="42dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: "
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35 years 193 days"
                android:textSize="16sp"
                android:textColor="#000"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="42dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Playing role: "
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/playingROLE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bowler"
                android:textSize="16sp"
                android:textColor="#000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="42dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Batting: "
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/battingStyleTB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right-hand bat"
                android:textSize="16sp"
                android:textColor="#000"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="42dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:gravity="left"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bowling: "
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#000"
                />
            <TextView
                android:id="@+id/bowlingStyleTB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Right-arm-fast-medium"
                android:textSize="16sp"
                android:textColor="#000"
                />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>